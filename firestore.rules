rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isApproved() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isApproved == true;
    }
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // Users collection
    match /users/{userId} {
      allow read: if true; // Publicly readable for the anonymous home page
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && (request.auth.uid == userId || isAdmin());
      allow delete: if isAdmin();
    }

    // Business data
    match /trips/{document=**} {
      allow read: if true; // Publicly readable for the home page calendar
      allow write: if isApproved();
    }
    match /routes/{document=**} {
      allow read, write: if isApproved();
    }
    match /driving_tracks/{document=**} {
      allow read, write: if isApproved();
    }
    match /drivingTracks/{document=**} {
      allow read, write: if isApproved();
    }

    // Prices and Settings
    match /fuelPrices/{document=**} {
      allow read: if isSignedIn();
      allow write: if isApproved();
    }
    match /settings/{document=**} {
      allow read: if true; // Publicly readable for fee calculations
      allow write: if isAdmin();
    }
  }
}
